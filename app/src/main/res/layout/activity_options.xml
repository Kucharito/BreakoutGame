<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:paddingBottom="40dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <!-- Nadpis -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nastavenia hry"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_marginBottom="30dp" />

        <!-- Farba pálky -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farba pálky"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/paddleRed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Červená"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FF0000"/>

        <Button
            android:id="@+id/paddleBlue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Modrá"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#0000FF"/>

        <Button
            android:id="@+id/paddleGreen"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Zelená"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#00FF00"/>

        <!-- Farba tehličiek -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farba tehličiek"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/brickRed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Červená"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FF0000"/>

        <Button
            android:id="@+id/brickWhite"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Biela"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:background="@drawable/black_border"
            android:backgroundTint="#FFFFFF"/>

        <!-- Farba loptičky -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farba loptičky"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/ballRed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Červená"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FF0000"/>

        <Button
            android:id="@+id/ballWhite"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Biela"
            android:layout_marginBottom="30dp"
            android:textColor="@color/black"
            android:background="@drawable/black_border"
            android:backgroundTint="#FFFFFF"/>

        <!-- Späť -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Späť"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="10dp" />

    </LinearLayout>
</ScrollView>
